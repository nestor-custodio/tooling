#! /bin/env bash
source '/home/nestor/bin/std.lib'

# ---

{ # -- Help Text -- #

	cat <<-EOF | store-as usage
		Usage: $( script-name )

		Convenience tool for dead-simple event notification.
		(Useful for alerting of completion after long-running tasks.)

		Leverages 'notify' to push notifications (via the 'pushover' channel).


		Mandatory arguments to long options are mandatory for short options too.
		  --help                    Show this help text.


		Exit Status:
		  0  if OK,
		  1  if invalid option.
	EOF

}

# ---

{ # -- Parameter Processing: Options -- #

	CHAR_OPTS=''
	LONG_OPTS='help'

	set-params
	while true; do
		option="$1" && shift
		case "$option" in
			(--help) exit-out "$usage" ;;
			(--) break ;;  # No more options.
		esac
	done

}

{ # -- Parameter Processing: Positionals -- #

	[ "$#" == 0 ] || error-out 1 'invalid option(s)'

}

# ---
# ---


ps -p "$PPID" -o comm= | store-as name
ps -p "$PPID" -o etimes= | store-as duration
calc "$( timestamp ) - $( ps -p "$PPID" -o etimes= )" | store-as start_time

notify 'pushover' "DING! -- ${name}" <<-EOF
	Started: $( date --date="@${start_time}" '+%F %R' )
	Ran For: $( elapsed --since="@${start_time}" )
EOF
