#! /bin/env bash
source '/home/nestor/bin/std.lib'

# ---

{ # -- Help Text -- #

	cat <<-EOF | store-as usage
		Usage: $( script-name ) [DATABASE] [-- PGCLI_OPTIONS]

		Convenience wrapper for connecting to Postgres using 'pgcli'.

		The DATABASE param may be:
		  - a Postgres connection URL (or "URL-like")
		  - a lookup path within the VM credentials store
		  - the name of a database within CloudSQL 'postgres' instance

		If no DATABASE is given but the 'rails-db' function is available,
		that will be used to determine the database to connect to.


		Mandatory arguments to long options are mandatory for short options too.
		  --help                    Show this help text.


		Exit Status:
		  0  if OK,
		  1  if invalid option,
		  2  if 'pgcli' executable not found.
	EOF

}

# ---

{ # -- Parameter Processing: Options -- #

	CHAR_OPTS=''
	LONG_OPTS='help'

	set-params
	while true; do
		option="$1" && shift
		case "$option" in
			(--help) exit-out "$usage" ;;
			(--) break ;;  # No more options.
		esac
	done

}

{ # -- Parameter Processing: Positionals -- #

	database="$1" && shift
	[ -z "$database" ] && command -v rails-db > /dev/null && database="$( rails-db )"
	[ -n "$database" ] || error-out 1 'no DATABASE given or available via ENV or Rails config'


	[ "$#" == 0 ] || error-out 1 'invalid option(s)'

}

# ---
# ---


# DATABASE param processing.

if 'matches?' '://' <<< "$database"; then
	# We'll take a URL-like as-is.
	#
	database_url="$database"
else
	# Use the given value to query the credentials store.
	#
	creds "databases/${database}" | store-as database_url

	# Fall back to assuming it's a database name within our cloud instance.
	#
	[ -n "$database_url" ] || database_url="postgres://${USER}@postgres/${database}"
fi


pgcli_exec="$( command -v pgcli )"
[ -n "$pgcli_exec" ] || error-out 2 'pgcli executable not found'

"$pgcli_exec" --pgclirc="~/.config/pgcli/config" "$database_url" "$@"
