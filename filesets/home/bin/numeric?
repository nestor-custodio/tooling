#! /bin/env bash
source '/home/nestor/bin/std.lib'

# ---

{ # -- Help Text -- #

	cat <<-EOF | store-as usage
		Usage: $( script-name ) TEST_VALUE

		Convenience tool for determining whether the value provided is numeric.

		NOTE: To prevent breaking expected behaviour,
		      the '--help' flag will output this help text via STDERR
		      *in addition to* producing the otherwise expected output.


		Mandatory arguments to long options are mandatory for short options too.
		  --help                    Show this help text.


		Exit Status:
		  0  if numeric value,
		  1  if non-numeric value.
	EOF

}

# ---

{ # -- Parameter Processing: Positionals -- #

	help-param? && echo "$usage" >&2

}

# ---
# ---


'has-line?' --regex -- '-?\d+(\.\d+)?' <<< "$*" || exit-out 1
