#! /bin/env bash
source '/home/nestor/bin/std.lib'

# ---

{ # -- Help Text -- #

	cat <<-EOF | store-as usage
		Usage: $( script-name ) CHANNEL [SUBJECT] MESSAGE
		       $( name-blanks ) CHANNEL [SUBJECT] # (MESSAGE given via pipe)

		Sends a message via the given delivery CHANNEL.
		(Only available value right now is "pushover".)


		Param Processing
		  When sorting params, the MESSAGE takes precedence. The following list
		  describes how available data is assigned to either SUBJECT or MESSAGE.

		  - '$( script-name ) CHANNEL'
		    This will generate an error, as no SUBJECT or MESSAGE is available.

		  - '$( script-name ) CHANNEL PARAM-2'
		    PARAM-2 is the MESSAGE; the notification will have no SUBJECT.

		  - '$( script-name ) CHANNEL PARAM-2 PARAM-3'
		    PARAM-2 is the SUBJECT; PARAM-3 is the MESSAGE

		  - 'data-source | $( script-name ) CHANNEL'
		    The 'data-source' output is the MESSAGE; the notification will have
		    no SUBJECT.

		  - 'data-source | $( script-name ) CHANNEL PARAM-2'
		    The 'data-source' output is the MESSAGE; PARAM-2 is the MESSAGE.

		  - 'data-source | $( script-name ) CHANNEL PARAM-2 PARAM-3'
		    This will generate an error, as too many values have been given.


		Mandatory arguments to long options are mandatory for short options too.
		  --help                    Show this help text.


		Exit Status:
		  0  if OK,
		  1  if invalid option,
		  2  if invalid CHANNEL,
		  3  if message failed to send.
	EOF

}

# ---

{ # -- Parameter Processing: Options -- #

	CHAR_OPTS=''
	LONG_OPTS='help'

	set-params
	while true; do
		option="$1" && shift
		case "$option" in
			(--help) exit-out "$usage" ;;
			(--) break ;;  # No more options.
		esac
	done

}

{ # -- Parameter Processing: Positionals -- #

	channel=''
	subject=''
	message=''

	if 'piped-input?'; then
		store-as message
		case "$#" in

			1)
				channel="$1" && shift
				;;

			2)
				channel="$1" && shift
				subject="$1" && shift
				;;

			*) error-out 1 'invalid option(s)' ;;
		esac
	else
		case "$#" in

			2)
				channel="$1" && shift
				message="$1" && shift
				;;

			3)
				channel="$1" && shift
				subject="$1" && shift
				message="$1" && shift
				;;

			*) error-out 1 'invalid option(s)' ;;
		esac
	fi

}

# ---
# ---


case "$channel" in

	(pushover)
		# Fetch keys.
		#
		creds pushover/user-key     | store-as user_key
		creds pushover/services/gcp | store-as service_key

		# Send the message.
		#
		curl -s --form-string 'priority=0'                 \
						--form-string "user=${user_key}"           \
						--form-string "token=${service_key}"       \
						--form-string "title=${subject}"           \
						--form-string "message=${message}"         \
						'https://api.pushover.net/1/messages.json' \
		| json '.status' | 'has-line?' 1 &> /dev/null
		;;

	*) error-out 2 "unknown CHANNEL: '${channel}'" ;;
esac
