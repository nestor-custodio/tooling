#! /bin/env bash
source '/home/nestor/bin/std.lib'

# ---

{ # -- Help Text -- #

	cat <<-EOF | store-as usage
		Usage: $( script-name )

		Installs Helix's language grammars and various LSPs for its use.


		Mandatory arguments to long options are mandatory for short options too.
		  --help                    Show this help text.


		Exit Status:
		  0  if OK,
		  1  if invalid option.
	EOF

}

# ---

{ # -- Parameter Processing: Options -- #

	CHAR_OPTS=''
	LONG_OPTS='help'

	set-params
	while true; do
		option="$1" && shift
		case "$option" in
			(--help) echo -e "$usage"; exit 0 ;;
			(--) break ;;  # End of option processing.
		esac
	done

}

{ # -- Parameter Processing: Positionals -- #

	[ "$#" == 0 ] || error-out 1 'invalid option(s)'

}

# ---
# ---


# Build Helix grammars, if needed.
#
if [ -z "$( ls "${HOME}/.config/helix/runtime/grammars" 2> /dev/null )" ]; then
	hx --grammar fetch
	hx --grammar build
fi

# Install Ruby-based language servers.
#
if command -V gem &> /dev/null; then
	gem list -i solargraph &> /dev/null || gem install solargraph rbs:2.8.4
fi

# Install Node-based language servers.
#
if command -V npm &> /dev/null; then
	npm install --global --omit='dev' bash-language-server         \
	                                  typescript                   \
	                                  typescript-language-server   \
	                                  vscode-langservers-extracted \
	                                  @vue/language-server         \
	                                  yaml-language-server
fi

# Install Python-based language servers.
#
if command -V python3 &> /dev/null; then
  command -V pylsp &> /dev/null || sudo apt-get -qqy install python3-pylsp
fi
