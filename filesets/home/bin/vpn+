#! /bin/env bash
source '/home/nestor/bin/std.lib'

# ---

{ # -- Help Text -- #

	cat <<-EOF | store-as usage
		Usage: $( script-name ) NETWORK

		Opens a VPN connection to the given NETWORK.


		Mandatory arguments to long options are mandatory for short options too.
		  --help                    Show this help text.


		Exit Status:
		  0  if OK,
		  1  if invalid option,
		  2  if invalid NETWORK.
	EOF

}

# ---

{ # -- Parameter Processing: Options -- #

	CHAR_OPTS=''
	LONG_OPTS='help'

	set-params
	while true; do
		option="$1" && shift
		case "$option" in
			(--help) exit-out "$usage" ;;
			(--) break ;;  # No more options.
		esac
	done

}

{ # -- Parameter Processing: Positionals -- #

	network="$1" && shift
	[ -n "$network" ] || error-out 1 'no NETWORK given'


	[ "$#" == 0 ] || error-out 1 'invalid option(s)'

}

# ---
# ---


# Ensure the VPN host is running.
#
[ "$( gcp state tunnel )" == "RUNNING" ] || gcp start tunnel


# Ensure the given NETWORK exists.
#
network_bins="${HOME}/vm-scripts/tunnel/bin/${network}"
[ -d "$network_bins" ] || error-out 2 "unknown NETWORK: '${network}'"


ssh nestor@tunnel -- "${network_bins}/connect" --detach
