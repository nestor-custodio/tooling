#! /bin/env bash
source '/home/nestor/bin/std.lib'

# ---

source "$( script-path )/status_helpers.lib"


df --type='ext4' --block-size='1' --output='used,size' --total | tail -n1 | store-as used total

fscache_size=0
fscache_root='/var/cache/fscache'
[ -d "$fscache_root" ] && sudo du --bytes --summarize "$fscache_root" | cut -f1 | store-as fscache_size

numfmt --to='iec' --format='%0.0f' "$total" | store-as display_total
calc "floor((${used} - ${fscache_size}) / ${total} * 10)" | store-as tenths_used


case "$tenths_used" in
  0) left-piped " #[fg=green ]ğ– #[default] / %s" "$display_total" ;;
  1) left-piped " #[fg=green ]ğ• #[default] / %s" "$display_total" ;;
  2) left-piped " #[fg=green ]ğ” #[default] / %s" "$display_total" ;;
  3) left-piped " #[fg=green ]ğ‘ #[default] / %s" "$display_total" ;;
  4) left-piped " #[fg=green ]ğ #[default] / %s" "$display_total" ;;
  5) left-piped " #[fg=yellow]ğ… #[default] / %s" "$display_total" ;;
  6) left-piped " #[fg=yellow]ğŒ¼ #[default] / %s" "$display_total" ;;
  7) left-piped " #[fg=yellow]ğŒ¡ #[default] / %s" "$display_total" ;;
  8) left-piped " #[fg=red   ]â˜° #[default] / %s" "$display_total" ;;
  *) left-piped " #[fg=red   ]â–‡ #[default] / %s" "$display_total" ;;
esac

# left-piped " %i%%%% of %s" "$percent_used" "$total_space"
