#! /bin/env bash
source '/home/nestor/bin/std.lib'

# ---

{ # -- Help Text -- #

	cat <<-EOF | store-as usage
		Usage: $( script-name ) PROFILE

		Wrapper for 'hostctl' that removes all entries for the given profile.

		Mandatory arguments to long options are mandatory for short options too.
		  --help                    Show this help text.


		Exit status:
		  0  if OK,
		  1  if invalid option.
	EOF

}

# ---

{ # -- Parameter Processing: Options -- #

	CHAR_OPTS='h'
	LONG_OPTS='help'

	set-params
	while true; do
		option="$1" && shift
		case "$option" in
			(-h|--help) exit-out "$usage" ;;
			(--) break ;;  # No more options.
		esac
	done

}

{ # -- Parameter Processing: Positionals -- #

	profile="$1" && shift
	[ -n "$profile" ] || error-out 1 'no profile name given'


	[ "$#" == 0 ] || error-out 1 'invalid option(s)'

}

# ---
# ---


hostctl remove "$profile"
