#! /bin/env bash
source '/home/nestor/bin/std.lib'

# ---

{ # -- Help Text -- #

	cat <<-EOF | store-as usage
		Usage: $( script-name )

		Reads STDIN and stores it as a pastebin, outputing the resulting URL.
		(See https://paste.c-net.org/ for more information.)

		Mandatory arguments to long options are mandatory for short options too.
		  --help                    Show this help text.

		Exit status:
		  0  if OK,
		  1  if invalid option.
	EOF

}

# ---

{ # -- Parameter Processing: Options -- #

	CHAR_OPTS='h'
	LONG_OPTS='help'

	set-params
	while true; do
		option="$1" && shift
		case "$option" in
			(-h|--help) exit-out "$usage" ;;
			(--) break ;;  # No more options.
		esac
	done

}

# ---
# ---


# (https://paste.c-net.org/)

pastebin_url='https://paste.c-net.org/'
curl -s --data-binary @- "$pastebin_url"
